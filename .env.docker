# Application
APP_NAME="Metin2CMS"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# Database Configuration - Connect to external game server
# Game Database (Account)
DB_CONNECTION=mysql
DB_HOST=your_game_server_ip
DB_PORT=3306
DB_DATABASE=account
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Player Database
DB_PLAYER_HOST=your_game_server_ip
DB_PLAYER_PORT=3306
DB_PLAYER_DATABASE=player
DB_PLAYER_USERNAME=your_db_user
DB_PLAYER_PASSWORD=your_db_password

# Common Database
DB_COMMON_HOST=your_game_server_ip
DB_COMMON_PORT=3306
DB_COMMON_DATABASE=common
DB_COMMON_USERNAME=your_db_user
DB_COMMON_PASSWORD=your_db_password

# Log Database
DB_LOG_HOST=your_game_server_ip
DB_LOG_PORT=3306
DB_LOG_DATABASE=log
DB_LOG_USERNAME=your_db_user
DB_LOG_PASSWORD=your_db_password

# Redis Cache
REDIS_HOST=redis
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# Logging
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error